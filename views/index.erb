<link rel="stylesheet" href="stylesheets/slideme.css">


<div id='banner'>
  <ul class='slideme'>
    <li><img class = 'sliding_banner' src="/images/Birth_of_Venus_Botticelli.jpg" alt=""></li>
    <li><img class = 'sliding_banner' src="/images/Rae_-_Water_Nymphs_(color).png" alt=""></li>
    <li><img class = 'sliding_banner' src="/images/img.jpg" alt=""></li>
    <li><img class = 'sliding_banner' src="/images/Siemiradski_Fackeln.jpg" alt=""></li>
  </ul>
</div>


<div id = 'login_section'>

  <%if !logged_in?%>
    <form action="/session" method = "post">
      <label for="">email</label>
      <input type="text" name = "email">
      <label for="">password</label>
      <input type="password" name = "password">
      <button>login</button>
    </form>
  <%end%>

  <%if logged_in?%>
    <h3>Hello <%= current_user.name %></h3>
    <a href="/my_album">my album</a>
    <form action="/session" method = "post">
      <input type="hidden" name ="_method" value = 'delete'>
      <button>logout</button>
    </form>
  <%end%>


  <form action="/results" method="get">
    <input type="text" placeholder = "painting title"  name = "painting_search" >
    <button id = "search">search painting</button>
  </form>

</div>



<div id = 'homeAlbumGallery'>


    <% @top_ordered_paintgs.each do |painting| %>

      <h2> <a href="/painting_detail/<%= painting.id %>"> <%= painting.title %> </a> </h2>
      <a href="/painting_detail/<%= painting.id %>"> <img src = " <%= painting.img_url %> "> </a>

      <form action="/painting/<%=painting.id%>/likes" method = "post">
        <input type="hidden" name ="_method" value = 'put'>
        <h5>Likes: <%= painting.likes_count %></h5>
        <%if logged_in?%>
          <button onclick = "this.style.backgroundColor='blue' ">Like</button>
        </form>
       <% end %>


    <% end %>

</div>







<script src="https://cdn.jsdelivr.net/jquery/3.1.0/jquery.min.js"></script>
<script src="javascripts/slideme.js"></script>

<script>
$('#banner').slideme({
  interval : 2000,
  speed : 900,
  autoslide : true,
  loop : true,
  autoslideHoverStop : false,
  arrows: true,
  // pagination: 'numbers',
    resizable: {
    width: 990,
    height: 450,
    }
});
</script>
