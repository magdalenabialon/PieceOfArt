<div id = 'login_section'>

  <%if !logged_in?%>
    <form action="/session" method = "post">
      <label for="">email</label>
      <input type="text" name = "email">
      <label for="">password</label>
      <input type="password" name = "password">
      <button>login</button>
    </form>
  <%end%>

  <%if logged_in?%>
    <h3>Hello <%= current_user.name %></h3>
    <a href="/my_album">my album</a>
    <form action="/session" method = "post">
      <input type="hidden" name ="_method" value = 'delete'>
      <button>logout</button>
    </form>
  <%end%>


  <form action="/results" method="get">
    <input type="text" placeholder = "painting title"  name = "painting_search" >
    <button id = "search">search painting</button>
  </form>

</div>



<div id = 'homeAlbumGallery'>

    <% @paintings.each do |painting| %>
      <h2> <a href="/painting_detail/<%= painting.id %>"> <%= painting.title %> </a> </h2>
      <a href="/painting_detail/<%= painting.id %>"> <img src = " <%= painting.img_url %> "> </a>

      <form action="/painting/<%=painting.id%>/likes" method = "post">
        <input type="hidden" name ="_method" value = 'put'>
        <h5>Likes: <%= painting.likes.count %></h5>
        <%if logged_in?%>
          <button onclick = "this.style.backgroundColor='blue' ">Like</button>
        </form>
       <% end %>

    <% end %>


</div>
